{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "outDir": "../dist/tests",
    "rootDir": "."
  },
  "include": ["steps/**/*.ts", "support/**/*.ts"],
  "exclude": ["node_modules"]
}
